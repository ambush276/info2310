<% provide(:title, 'Login') %>

<div class='row'>
<div class='span12'>
<h1> Login </h1>

<%= form_for(:session, url: sessions_path) do |f| %>


<div class="field">
	<%= f.label :email %><br/>
	<%= f.text_field :email %><br/>
</div>

<div class="field">
	<%= f.label :password %><br/>
	<%= f.password_field :password %><br/>
</div>

<div class="actions" >
<%= f.submit "Login", class: 'btn btn-primary btn-large' %>
</div>

<% end %>

</div>
</div>
